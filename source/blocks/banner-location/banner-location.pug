mixin banner-location(data, className)
  .banner-location(class=className)
    .banner-location__wrapper
      img.banner-location__img(src=data.img.src, alt=data.img.alt)
      .banner-location__status(style=`color: ${data.status_color}`) #{data.status}
    .banner-location__title #{data.title} #{data.price}
    .banner-location__desc #{data.description}
